<?xml version="1.0" encoding="utf-8"?>
<com.tacitus.dnp.scenario.StepView
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <CheckBox
        android:id="@+id/link_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight=".10"/>

    <EditText
        android:id="@+id/soundText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:inputType="text"
        android:enabled="true"
        android:hint="Sound"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight=".30"/>
    <ImageView
        android:id="@+id/chooseColor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/step_color_indicator"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight=".30"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:showDividers="middle"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:background="@android:color/white"
        android:layout_weight=".20">
        <CheckBox
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/underline_text"
            android:enabled="true"
            android:ellipsize="end"
            android:singleLine="true"/>
        <CheckBox
            android:id="@+id/hollow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/hollow_text"
            android:enabled="true"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>

    <!--<Space android:layout_height="match_parent"-->
        <!--android:layout_width="match_parent"/>-->

    <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight=".10"/>

    </LinearLayout>
    </com.tacitus.dnp.scenario.StepView>