<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    android:orientation="vertical" >

        <com.tacitus.dnp.widget.DrawingView
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF" />


        <RelativeLayout
            android:id="@+id/color_chooser"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tools_height"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FF660000"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FFFF0000"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FFFF6600"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FFFFCC00"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FF009900"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FF009999"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FF0000FF"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FF990099"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FFFF6666"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FFFFFFFF"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FF787878"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#FF000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <RadioGroup android:id="@+id/toggleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                <RadioButton
                    android:id="@+id/color_brown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FF660000"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/color_red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FFFF0000" />

                <RadioButton
                    android:id="@+id/color_orange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FFFF6600" />

                <RadioButton
                    android:id="@+id/color_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FFFFCC00" />

                <RadioButton
                    android:id="@+id/color_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FF009900" />

                <RadioButton
                    android:id="@+id/color_cyan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FF009999" />


                <RadioButton
                    android:id="@+id/color_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FF0000FF" />

                <RadioButton
                    android:id="@+id/color_violet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FF990099" />

                <RadioButton
                    android:id="@+id/color_pink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FFFF6666" />

                <RadioButton
                    android:id="@+id/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FFFFFFFF" />

                <RadioButton
                    android:id="@+id/color_grey"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FF787878" />

                <RadioButton
                    android:id="@+id/color_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/color_selector"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClickedToggle"
                    android:button="@null"
                    android:layout_weight="1"
                    android:tag="#FF000000" />
                </RadioGroup>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_horizontal"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#FFCCCCCC"
        android:orientation="vertical"
        android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tools_height"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <ImageButton
                android:id="@+id/new_btn"
                android:layout_width="@dimen/tools_width"
                android:layout_height="match_parent"
                android:contentDescription="@string/start_new"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_add"/>


            <ImageButton
                android:id="@+id/save_btn"
                android:layout_width="@dimen/tools_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/save"
                android:src="@android:drawable/ic_menu_save"/>


            <ImageButton
                android:id="@+id/load_btn"
                android:layout_width="@dimen/tools_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/load"
                android:src="@android:drawable/ic_menu_gallery"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/brush_size_chooser_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brush_size"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left|center_horizontal"/>
                    <SeekBar
                        android:id="@+id/brush_size_chooser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/brush_size_chooser_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hollow_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/hollow_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="hollowClicked"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/erase_mode_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/erase_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="eraseClicked"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/touch_size_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/touch_size_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="touchSizeModeClicked"
                        android:layout_gravity="right|center_horizontal"
                        android:checked="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/pressure_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="pressureModeClicked"
                        android:layout_gravity="right|center_horizontal"
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/alpha_chooser_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alpha_value"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left|center_horizontal"/>
                    <SeekBar
                        android:id="@+id/alpha_chooser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/alpha_chooser_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>



        </LinearLayout>
        </LinearLayout>
</android.support.v4.widget.DrawerLayout>