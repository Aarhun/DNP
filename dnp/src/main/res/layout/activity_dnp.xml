<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    android:orientation="vertical" >

        <com.tacitus.dnp.widget.DrawingView
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF" />

    </LinearLayout>
</FrameLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_horizontal"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#FFCCCCCC"
        android:orientation="vertical"
        android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/brush_size_chooser_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brush_size"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left|center_horizontal"/>
                    <SeekBar
                        android:id="@+id/brush_size_chooser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/brush_size_chooser_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hollow_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/hollow_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="hollowClicked"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/underline_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/underline_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="underlineClicked"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/erase_mode_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/erase_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="eraseClicked"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/touch_size_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/touch_size_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="touchSizeModeClicked"
                        android:layout_gravity="right|center_horizontal"
                        android:checked="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure_text"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/pressure_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="pressureModeClicked"
                        android:layout_gravity="right|center_horizontal"
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/alpha_chooser_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alpha_value"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left|center_horizontal"/>
                    <SeekBar
                        android:id="@+id/alpha_chooser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/alpha_chooser_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/old_tablet_mode"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="left|center_horizontal"/>
                    <Switch
                        android:id="@+id/old_tablet_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:onClick="oldTabletModeClicked"
                        android:layout_gravity="right|center_horizontal"
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/brush_size_chooser_title_old_tablet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brush_size_old_tablet"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left|center_horizontal"/>
                    <SeekBar
                        android:id="@+id/brush_size_chooser_old_tablet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/brush_size_chooser_text_old_tablet"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_gravity="right|center_horizontal"/>
                </LinearLayout>



        </LinearLayout>
        </LinearLayout>
</android.support.v4.widget.DrawerLayout>